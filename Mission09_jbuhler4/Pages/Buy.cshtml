@page
@model Mission09_jbuhler4.Pages.BuyModel
@{
}


<h2>Your Cart:</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var i in Model.basket.Items)
            {
                <tr>
                    <td>@i.Book.Title</td>
                    <td>@i.Book.Price</td>
                    <td>@i.Quantity</td>
                    <td>@(i.Book.Price * i.Quantity)</td>
                </tr>
            }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>
<a class="btn btn-primary" href="@Model.ReturnUrl">Back to Shopping</a>